[
    // Vim
    {
        "command": "extension.vim_escape",
        "key": "capslock",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "command": "workbench.action.navigateBack",
        "key": "ctrl+o",
        "when": "canNavigateBack"
    },
    // Overwrite "interactive.input.clear"
    {
        "command": "extension.vim_escape",
        "key": "escape",
        "when": "!LinkedEditingInputVisible && !accessibilityHelpWidgetVisible && !breakpointWidgetVisible && !editorHasMultipleSelections && !editorHasSelection && !editorHoverVisible && !exceptionWidgetVisible && !findWidgetVisible && !inSnippetMode && !isComposing && !markersNavigationVisible && !notificationToastsVisible && !parameterHintsVisible && !renameInputVisible && !selectionAnchorSet && !suggestWidgetVisible && resourceScheme == 'vscode-interactive'"
    },
    // 2x space triggers menu
    {
        "command": "workbench.action.showCommands",
        "key": "space space",
        "when": "activeEditorGroupEmpty && focusedView == '' && !whichkeyActive && !inputFocus"
    },
    {
        "command": "workbench.action.showCommands",
        "key": "space space",
        "when": "sideBarFocus && !inputFocus && !whichkeyActive"
    },
    // Multi cursors
    {
        "command": "removeSecondaryCursors",
        "key": "shift+escape",
        "when": "editorHasMultipleSelections && textInputFocus"
    },
    {
        "command": "editor.action.insertCursorAbove",
        "key": "ctrl+shift+k",
        "when": "editorTextFocus"
    },
    {
        "command": "editor.action.insertCursorBelow",
        "key": "ctrl+shift+j",
        "when": "editorTextFocus"
    },
    {
        "command": "editor.action.addSelectionToNextFindMatch",
        "key": "ctrl+k",
        "when": "editorFocus"
    },
    // ctrl tab order
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditorInGroup",
        "when": "!activeEditorGroupEmpty"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditorInGroup",
        "when": "!activeEditorGroupEmpty"
    },
    // Scroll suggestions
    {
        "command": "selectPrevSuggestion",
        "key": "shift+tab",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "command": "selectNextSuggestion",
        "key": "tab",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    // Trigger suggestions
    {
        "command": "editor.action.triggerSuggest",
        "key": "alt+space",
        "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
    },
    // Open drop-down terminal
    {
        "command": "workbench.action.togglePanel",
        "key": "ctrl+space"
    },
    // Fix spelling
    {
        "command": "cSpell.goToPreviousSpellingIssueAndSuggest",
        "key": "ctrl+l"
    },
    // Todo
    {
        "command": "workbench.view.extension.todo-tree-container",
        "key": "ctrl+shift+t",
        "when": "viewContainer.workbench.view.explorer.enabled"
    }
]
