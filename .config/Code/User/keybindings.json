[
    {
        "command": "extension.vim_escape",
        "comment": "Vim",
        "key": "capslock",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "command": "workbench.action.navigateBack",
        "comment": "Vim",
        "key": "ctrl+o",
        "when": "canNavigateBack"
    },
    {
        "command": "extension.vim_escape",
        "comment": "Interactive editor fixes; Overwrite interactive.input.clear",
        "key": "escape",
        "when": "!LinkedEditingInputVisible && !accessibilityHelpWidgetVisible && !breakpointWidgetVisible && !editorHasMultipleSelections && !editorHasSelection && !editorHoverVisible && !exceptionWidgetVisible && !findWidgetVisible && !inSnippetMode && !isComposing && !markersNavigationVisible && !notificationToastsVisible && !parameterHintsVisible && !renameInputVisible && !selectionAnchorSet && !suggestWidgetVisible && (resourceScheme == 'vscode-interactive' || activeEditor == 'workbench.editor.interactive')"
    },
    {
        "command": "interactive.execute",
        "comment": "Interactive editor fixes",
        "key": "shift+enter",
        "when": "activeEditor == 'workbench.editor.interactive'"
    },
    {
        "command": "acceptSelectedSuggestion",
        "comment": "accept suggestion even in interactive window",
        "key": "enter",
        "when": "acceptSuggestionOnEnter && suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && suggestionMakesTextEdit && textInputFocus"
    },
    {
        "command": "removeSecondaryCursors",
        "comment": "Multi cursors",
        "key": "shift+escape",
        "when": "editorHasMultipleSelections && textInputFocus"
    },
    {
        "command": "editor.action.insertCursorAbove",
        "comment": "Multi cursors",
        "key": "ctrl+shift+k",
        "when": "editorTextFocus"
    },
    {
        "command": "editor.action.insertCursorBelow",
        "comment": "Multi cursors",
        "key": "ctrl+shift+j",
        "when": "editorTextFocus"
    },
    {
        "command": "editor.action.addSelectionToNextFindMatch",
        "comment": "Multi cursors",
        "key": "ctrl+k",
        "when": "editorFocus"
    },
    {
        "command": "workbench.action.previousEditorInGroup",
        "comment": "ctrl tab order",
        "key": "ctrl+shift+tab",
        "when": "!activeEditorGroupEmpty"
    },
    {
        "command": "workbench.action.nextEditorInGroup",
        "comment": "ctrl tab order",
        "key": "ctrl+tab",
        "when": "!activeEditorGroupEmpty"
    },
    {
        "command": "selectPrevSuggestion",
        "comment": "Scroll suggestions",
        "key": "shift+tab",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "command": "selectNextSuggestion",
        "comment": "Scroll suggestions",
        "key": "tab",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "command": "editor.action.triggerSuggest",
        "comment": "Trigger suggestions",
        "key": "alt+space",
        "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
    },
    {
        "command": "workbench.action.terminal.toggleTerminal",
        "comment": "Open drop-down terminal",
        "key": "ctrl+space",
        "when": "terminal.active"
    },
    {
        "command": "workbench.actions.view.toggleProblems",
        "comment": "Toggle problems view",
        "key": "ctrl+y"
    },
    {
        "command": "workbench.action.togglePanel",
        "comment": "Toggle bottom panel",
        "key": "ctrl+j"
    },
    {
        "command": "cSpell.goToPreviousSpellingIssueAndSuggest",
        "comment": "Fix spelling",
        "key": "ctrl+l"
    },
    {
        "command": "actions.find",
        "comment": "Fix ctrl+f malfunctioning sometimes",
        "key": "ctrl+f",
        "when": "editorFocus || editorIsOpen"
    },
    {
        "comment": "Easy navigation in quick open/QuickPick"
    },
    {
        "command": "workbench.action.quickOpenSelectNext",
        "key": "ctrl+j",
        "when": "inQuickOpen"
    },
    {
        "command": "workbench.action.quickOpenSelectPrevious",
        "key": "ctrl+k",
        "when": "inQuickOpen"
    },
    {
        "comment": "Easy navigation in suggestion/intellisense"
    },
    {
        "command": "selectNextSuggestion",
        "key": "ctrl+j",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "command": "selectPrevSuggestion",
        "key": "ctrl+k",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "command": "acceptSelectedSuggestion",
        "key": "ctrl+l",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "comment": "Easy navigation in parameter hint (i.e. traverse the hints when there's multiple overload for one method)"
    },
    {
        "command": "showNextParameterHint",
        "key": "ctrl+j",
        "when": "editorFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
    },
    {
        "command": "showPrevParameterHint",
        "key": "ctrl+k",
        "when": "editorFocus && parameterHintsMultipleSignatures && parameterHintsVisible"
    },
    {
        "comment": "Easy navigation in code action"
    },
    {
        "command": "selectNextCodeAction",
        "key": "ctrl+j",
        "when": "codeActionMenuVisible"
    },
    {
        "command": "selectPrevCodeAction",
        "key": "ctrl+k",
        "when": "codeActionMenuVisible"
    },
    {
        "command": "acceptSelectedCodeAction",
        "key": "ctrl+l",
        "when": "codeActionMenuVisible"
    },
    {
        "comment": "Add ctrl+h/l to navigate in file browser"
    },
    {
        "command": "file-browser.stepOut",
        "key": "ctrl+h",
        "when": "inFileBrowser"
    },
    {
        "command": "file-browser.stepIn",
        "key": "ctrl+l",
        "when": "inFileBrowser"
    }
]
