general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "volume default"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

volume default {
    format = "🔈 %volume"
    format_muted = "🔇 %volume"
    device = "default"
}

ipv6 {
    format_up = "ipv6"
    format_down = ""
}

wireless _first_ {
    format_up = "📶 %essid"
    format_down = "" }

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "🌐"
    format_down = ""
}

battery all {
    last_full_capacity = true
    hide_seconds = true
    integer_battery_capacity = false
    format = "%status %percentage %remaining"
    format_down = "No battery"
    status_chr = "🔌"
    status_bat = "🔋"
    status_unk = "?"
    status_full = "☻"
    low_threshold = 10
}

tztime local {
    format = "📆 %F %A 🕗 %T"
}

read_file file_updater_example {
    path = "~/.cache/i3status_files-file_updater_example.txt"
    color_good = "#f0f0f0"
}
