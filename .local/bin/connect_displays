#!/usr/bin/env bash

config_file="${HOME}/.config/displays_to_connect/${HOSTNAME}.txt"

DISPLAYS_TO_CONNECT="" # Comma separated list
[[ -f "${config_file}" ]] && DISPLAYS_TO_CONNECT="$(cat "${config_file}")"
[[ "$#" -eq 1 ]] && DISPLAYS_TO_CONNECT="$1"

xrandr --setmonitor "connected_${DISPLAYS_TO_CONNECT}" auto "${DISPLAYS_TO_CONNECT}"
